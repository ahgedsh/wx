.button{
    display: inline-block;
    margin: 4px;
    background: #e0e1e2;
    border-radius: 1px;
    font-size: 32rpx;
    transform: 0.3s all;
}
.button::after{
    content: none;
}
.button:hover{
    opacity: 0.76;
}
.button .primary{
    background: #000000;
    color:rgba(255,255,255,0.75);
}