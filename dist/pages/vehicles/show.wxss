.section {
  height: 100vh;
}
.cover {
  position: relative;
}
.cover image,
.cover video {
  height: 38.2vh;
}
.cover .content {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 8px 16px;
  position: absolute;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  color: rgba(255, 255, 255, 0.85);
  text-shadow: 0 5px 19px rgba(0, 0, 0, 0.5);
}
.cover .header {
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
}
.cover .sub-header {
  font-size: 26rpx;
  letter-spacing: 4px;
  font-weight: normal;
  text-transform: uppercase;
}
.cover .meta {
  font-size: 26rpx;
}
.spec {
  display: flex;
  font-size: 24rpx;
  border-bottom: 1px solid #ededed;
}
.spec .item {
  border-right: 1px solid #ededed;
  width: 100%;
  padding: 64rpx;
}
.spec .item .value text {
  font-size: 60rpx;
  margin-right: 8rpx;
}
.button.primary {
  background: #000000;
  color: rgba(255, 255, 255, 0.75);
}
.action {
  text-align: center;
  padding: 48px;
}
.action .description {
  margin-bottom: 48rpx;
}
.story.white {
  background: #ffffff;
}
.story .content {
  display: flex;
  flex-direction: column;
  height: 38.2vh;
  padding-top: 10%;
  text-align: center;
}
.story .header {
  margin-bottom: 16px;
  font-size: 48rpx;
  font-weight: bold;
}
.story .sub-header {
  font-size: 28rpx;
  text-transform: uppercase;
  letter-spacing: 6rpx;
  margin-bottom: 8px;
  color: rgba(0, 0, 0, 0.75);
}
.story .description {
  padding: 0 12%;
}
.story image,
.story video {
  height: 41.8vh;
  margin-top: 90px;
}
